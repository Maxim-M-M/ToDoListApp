@model ToDo

<h2>Create Task</h2>

<form asp-action="Create" asp-controller="ToDo" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title" class="control-label">Task Title</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
        <div class="invalid-feedback">
            Please provide a task title.
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <div class="invalid-feedback">
            Please provide a task description.
        </div>
    </div>

    <div class="form-group">
        <label asp-for="DateCompleted" class="control-label">Completion Date</label>
        <input asp-for="DateCompleted" type="datetime-local" class="form-control" asp-format="{0:yyyy-MM-dd HH:mm}" />
        <span asp-validation-for="DateCompleted" class="text-danger"></span>
        <div class="invalid-feedback">
            Please specify the completion date.
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Task</button>
    </div>
</form>

<div class="mt-3">
    <a asp-action="Read" class="btn btn-secondary">Back to Task List</a>
</div>
